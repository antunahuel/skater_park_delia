<main class="top_main pb-5">
    <section>
        <div class="container text-center w-75 mt-5" style="boder: 1px solid red">
            <h3>Actualice sus datos</h3>
            <p>Ingrese todos los datos solicitados</p>
            <hr>
            <form id="formsaveChange">
                <div class="mt-3">
                    <label class="form-label" for="id">Identificador:</label>
                    <input class="form-control" type="number" name="id" id="id">
                </div>
                <div class="mt-3">
                    <label class="form-label" for="nombre">Nombre:</label>
                    <input class="form-control" type="text" name="nombre" id="nombre">
                </div>
                <div class="mt-3">
                    <label class="form-label" for="anos_experiencia">AÃ±os experiencia:</label>
                    <input class="form-control" type="text" name="anos_experiencia" id="anos_experiencia">
                </div>
                <div class="mt-3">
                    <label class="form-label" for="especialidad">Especialidad:</label>
                    <input class="form-control" type="text" name="especialidad" id="especialidad">
                </div>
                <div class="mt-3">
                    <input class="btn btn-dark" type="submit" value="Guardar Cambios">
                </div>
            </form>
            <hr>
    </section>

    <section class="mt-5">
        {{>sectionIcon}}
    </section>
</main>

<script>

    let formsaveChange = document.getElementById("formsaveChange");

    formsaveChange.addEventListener("submit", async (event) => {
        try {
            event.preventDefault();
            
            let formdataSkater = new FormData(formsaveChange);

            let response = await fetch("/api/v1/change/participante",{
                method: 'PUT',
                body: formdataSkater
            })
            
            let data = await response.json();

            if(response.status == 200){
                alert(data.msg);
                location.reload();

            }
        } catch {
            alert(data.msg);
        }
    })
</script>